<section id="todos">
  <header>
    <h2>Editing '<%= @list[:name] %>'</h2>
    <ul>
      <li><button class="delete" href="/lists/<%= params[:id] %>/edit">Delete List</button></li>
    </ul>
  </header>
</section>

<form action="/lists/<%= @id.to_s %>/edit" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter the new name for your list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] || @list[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= @id %>">Cancel</a>
  </fieldset>
</form>
